{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    // 这可以对 `this` 上的数据属性进行更严格的推断
    // "strict": true,
    // "noImplicitAny": true,
    // "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}